<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <Transition
        app:constraintSetEnd="@id/extended"
        app:constraintSetStart="@id/minimised">
        <OnSwipe
            app:dragDirection="dragUp"
            app:touchAnchorId="@id/hiddenLayout"
            app:touchAnchorSide="top"
            app:touchRegionId="@id/hiddenLayout" />
        <OnClick
            app:clickAction="toggle"
            app:targetId="@id/dragView" />
    </Transition>
    <Transition
        app:constraintSetEnd="@id/minimised"
        app:constraintSetStart="@id/extended">
        <OnClick
            app:clickAction="toggle"
            app:targetId="@id/dragView" />
    </Transition>
    <ConstraintSet android:id="@+id/extended">

        <Constraint android:id="@id/hiddenLayout">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/row0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </Constraint>

    </ConstraintSet>
    <ConstraintSet android:id="@+id/minimised">

        <Constraint android:id="@id/hiddenLayout">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="18dp"
                app:layout_constraintBottom_toTopOf="@id/row0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </Constraint>

    </ConstraintSet>
</MotionScene>
